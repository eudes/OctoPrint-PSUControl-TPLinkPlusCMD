<form class="form-horizontal">
    <h4>General</h4>
    <div class="control-group">
        <label class="control-label">Address</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.psucontrol_tplinkpluscmd.address" placeholder="127.0.0.1">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Plug</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini" data-bind="value: settings.plugins.psucontrol_tplinkpluscmd.plug">
            <br/>
            <span class="help-inline">For single plug devices leave zero</span>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">ON Shell command</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.psucontrol_tplinkpluscmd.oncommand" placeholder="echo hello">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">OFF Shell command</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.psucontrol_tplinkpluscmd.offcommand" placeholder="echo hello">
        </div>
    </div>
</form>
